<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qxrj.net">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".loadingActivity.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".accountActivity.GuideActivity"
            android:label="@string/title_activity_guide"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".accountActivity.LoginActivity"
            android:label="@string/title_activity_guide"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".accountActivity.RegisterActivity"
            android:label="@string/title_activity_guide"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name=".index.IndexActivity"
            android:label="IndexActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name=".diary.DiaryActivity"
            android:label="DiaryActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name=".article.ArticleActivity"
            android:label="ArticleActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>