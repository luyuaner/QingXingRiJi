<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/edit_text_TenDp"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="注册帐号"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="19dp" />
    </FrameLayout>

    <EditText
        android:id="@+id/userNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/edit_text_TenDp"
        android:layout_marginLeft="@dimen/edit_text_TenDp"
        android:layout_marginRight="@dimen/edit_text_TenDp"
        android:layout_marginTop="@dimen/edit_text_TenDp"
        android:background="@drawable/shape_rounded"
        android:ems="10"
        android:hint="请输入用户名"
        android:inputType="textPersonName"
        android:paddingBottom="@dimen/edit_text_TenDp"
        android:paddingLeft="@dimen/edit_text_TenDp"
        android:paddingRight="@dimen/edit_text_TenDp"
        android:paddingTop="@dimen/edit_text_TenDp"
        android:text="" />

    <EditText
        android:id="@+id/nikeNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/edit_text_TenDp"
        android:layout_marginLeft="@dimen/edit_text_TenDp"
        android:layout_marginRight="@dimen/edit_text_TenDp"
        android:layout_marginTop="@dimen/edit_text_TenDp"
        android:background="@drawable/shape_rounded"
        android:ems="10"
        android:hint="请输入昵称"
        android:inputType="textPersonName"
        android:paddingBottom="@dimen/edit_text_TenDp"
        android:paddingLeft="@dimen/edit_text_TenDp"
        android:paddingRight="@dimen/edit_text_TenDp"
        android:paddingTop="@dimen/edit_text_TenDp"
        android:text="" />

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/edit_text_TenDp"
        android:layout_marginLeft="@dimen/edit_text_TenDp"
        android:layout_marginRight="@dimen/edit_text_TenDp"
        android:layout_marginTop="@dimen/edit_text_TenDp"
        android:background="@drawable/shape_rounded"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPersonName"
        android:paddingBottom="@dimen/edit_text_TenDp"
        android:paddingLeft="@dimen/edit_text_TenDp"
        android:paddingRight="@dimen/edit_text_TenDp"
        android:paddingTop="@dimen/edit_text_TenDp"
        android:text="" />

    <EditText
        android:id="@+id/surePasswordEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/edit_text_TenDp"
        android:layout_marginLeft="@dimen/edit_text_TenDp"
        android:layout_marginRight="@dimen/edit_text_TenDp"
        android:layout_marginTop="@dimen/edit_text_TenDp"
        android:background="@drawable/shape_rounded"
        android:ems="10"
        android:hint="请输入确认密码"
        android:inputType="textPersonName"
        android:paddingBottom="@dimen/edit_text_TenDp"
        android:paddingLeft="@dimen/edit_text_TenDp"
        android:paddingRight="@dimen/edit_text_TenDp"
        android:paddingTop="@dimen/edit_text_TenDp"
        android:text="" />

    <TextView
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="@dimen/edit_text_TenDp"
        android:paddingTop="@dimen/edit_text_TenDp"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:text="注册"
        android:textAlignment="center" />

</LinearLayout>