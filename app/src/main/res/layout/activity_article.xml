<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ddd"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/edit_text_TenDp"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="日记"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="19dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/index_tenDp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/index_tenDp"
            android:layout_marginTop="@dimen/index_tenDp"
            android:gravity="center"
            android:text="文章标题"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/index_tenDp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/index_tenDp"
            android:layout_marginLeft="@dimen/edit_text_TenDp"
            android:layout_marginTop="@dimen/index_tenDp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="14"
            android:text="2017-07-23" />

        <TextView
            android:id="@+id/nike_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/index_tenDp"
            android:layout_marginRight="@dimen/edit_text_TenDp"
            android:layout_marginTop="@dimen/index_tenDp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="5"
            android:text="张三" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/index_tenDp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/edit_text_TenDp"
            android:layout_marginRight="@dimen/edit_text_TenDp"
            android:layout_marginTop="@dimen/index_tenDp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="默认文字" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>